%h1 Listing cart_items

%table
  %thead
    %tr
      %th Price
      %th Amount
      %th Integer
      %th Dvd
      %th Basket
      %th
      %th
      %th

  %tbody
    - @cart_items.each do |cart_item|
      %tr
        %td= cart_item.price
        %td= cart_item.amount
        %td= cart_item.integer
        %td= cart_item.dvd_id
        %td= cart_item.basket_id
        %td= link_to 'Show', cart_item
        %td= link_to 'Edit', edit_cart_item_path(cart_item)
        %td= link_to 'Destroy', cart_item, :method => :delete, :data => { :confirm => 'Are you sure?' }
