= form_for @basket do |f|
  - if @basket.errors.any?
    #error_explanation
      %h2= "#{pluralize(@basket.errors.count, "error")} prohibited this basket from being saved:"
      %ul
        - @basket.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :Статус
    = f.number_field :status,class: 'form-control'
  .field
    = f.label :Адрес_доставки
    = f.text_field :address,class: 'form-control'
  .field
    = f.label :Тип_доставки
    =f.select :type_of_delivery, Basket::DELIVERY.map.with_index{|name,i| [name,i]}, {},class: 'form-control'
  %br
  .actions
    = f.submit 'Save'

-if @basket.cart_items.any?
  %h3 Заказы на статусе "Ожидание оплаты":
  -@basket.cart_items.each do |f|
    -if f.status == 1
      =render f
    -if not f.status
      =render f
  %h3 Заказы на статусе "Оплачено":
  -@basket.cart_items.each do |f|
    -if f.status == 2
      =render f
  %h3 Заказы на статусе "Доставляется":
  -@basket.cart_items.each do |f|
    -if f.status == 3
      =render f
  %h3 Заказы на статусе "Доставлено":
  -@basket.cart_items.each do |f|
    -if f.status == 4
      =render f
-else
  %h3 Корзина пуста.
